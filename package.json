{
  "name": "fractal-traveler",
  "version": "2.0",
  "description": "Synaptory Fractal Traveler",
  "scripts": {
    "build-prod": "webpack --mode production",
    "build-dev-nowatch": "webpack --mode development",
    "build-dev-watch": "webpack --mode development --watch",
    "start": "webpack serve --open",
    "deploy-dev-test": "npm run build-dev-nowatch && node deploy.js --test",
    "deploy-prod-test": "npm run build-prod && node deploy.js --test",
    "deploy-prod-prod": "npm run build-prod && node deploy.js",
    "test": "jest --config ./src/config/jest.config.js",
    "deploy-gh": "gh-pages -d dist",
    "docs": "jsdoc -r ./src/ ./README.md -d ./doc/ -c src/config/jsdoc.json",
    "palette-editor": "start http://localhost:3030 & npx serve ./tools/palette-editor -p 3030"
  },
  "author": "Radim Brnka",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "ftp-deploy": "^2.4.7",
    "gh-pages": "^6.3.0",
    "html-webpack-plugin": "^5.6.6",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "mini-css-extract-plugin": "^2.10.0",
    "prettier": "^3.8.1",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.16",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3",
    "webpack-ftp-upload-plugin": "^1.0.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "jsdoc": "^4.0.5"
  }
}
